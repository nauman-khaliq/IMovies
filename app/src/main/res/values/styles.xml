<resources>

    <style name="LightTextStyle">
        <item name="fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/light_gray_text</item>
    </style>
    <style name="BoldTextStyle">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="LightBoldTextStyle">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxBackgroundColor">@color/light_gray_back</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="errorShown">false</item>
        <item name="counterTextAppearance">@style/counterTextStyle</item>
        <item name="errorTextAppearance">@style/errorTextStyle</item>
    </style>

    <style name="BottomNavigationTextActiveStyle">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="counterTextStyle" parent="LightTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="errorTextStyle" parent="NormalTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ImageView.Corners" parent="">
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.SnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
    </style>


    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>




</resources>
